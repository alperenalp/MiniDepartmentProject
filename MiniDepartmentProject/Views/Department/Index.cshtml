@using MiniDepartmentProject.Models
@model List<Department>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<br/>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var department in Model)
    {
        <tr>
            <td>@department.Id</td>
            <td>@department.Name</td>
            <td><a href="/Department/DeleteDepartment/@department.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/GetDepartment/@department.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DetailDepartment/@department.Id" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Department/CreateDepartment/" class="btn btn-primary">Yeni Departman Ekle</a>
