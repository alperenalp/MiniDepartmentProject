@model MiniDepartmentProject.Models.Department
@{
    ViewData["Title"] = "GetDepartment";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<br />
@using (Html.BeginForm("EditDepartment", "Department", FormMethod.Post))
{
    <b>Departman Id:</b>
    @Html.TextBoxFor(x=>x.Id , new{@class="form-control"})
    <b>Departman Adı:</b>
    @Html.TextBoxFor(x=>x.Name , new{@class="form-control"})
    <br />
    <button class="btn btn-success">Departman Güncelle</button>
}